<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/imagelayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha=".8"
        android:background="@drawable/signup2"
        android:elevation="8dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/icon_navbar_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Operator Registration"
            android:textColor="#373636"
            android:textSize="17.5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="Done"
            android:textColor="#f72f72"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagelayout"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Company Name"/>

            <EditText
                android:id="@+id/person_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/company_name"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Authorised Person"/>

        </LinearLayout>

        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_margin="3dp"
            android:background="@drawable/edittext_stye"
            android:elevation="1dp"
            android:fontFamily="sans-serif-condensed"
            android:hint=" Address Line 1"
            android:inputType="textEmailAddress"/>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_below="@id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/addline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Address Line 2"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="City"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_below="@id/line2"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gstnumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="GST Number"/>

            <EditText
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="State"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linearLayout3">
            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout3"
                android:layout_margin="3dp"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_stye"
                android:elevation="1dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Password"
                android:inputType="number"/>

        </LinearLayout>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_below="@id/cc"
            android:background="@drawable/edittext_stye"
            android:elevation="1dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Phone Number"
            android:inputType="number"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/getStarted"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#dd2a2a"
        android:elevation="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Get Started"
            android:textAlignment="center"
            android:textColor="#f9f9f9"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginLeft="8dp"
            android:elevation="5dp"
            android:src="@drawable/icon_arrow_forward"/>
    </LinearLayout>

    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/getStarted"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Already Have Account?"
        android:textSize="14sp"
        android:textStyle="italic"/>
</RelativeLayout>
