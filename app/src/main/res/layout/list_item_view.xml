<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/joao"
        app:civ_border_color="#f3e1dbdb"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/profile_image"
        android:text="Abhishek Kushwaha"
        android:textColor="#252525"
         android:textSize="18sp" />



    <TextView
        android:id="@+id/boxNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerName"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/profile_image"
        android:text="89876578"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/boxStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/customerName"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/boxNumber"
        android:gravity="end"
        android:text="Active"
        android:textColor="#008100"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/customerCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:layout_toRightOf="@id/customerName"
        android:gravity="end"
        android:text="78849"
        android:textSize="16sp" />
    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_below="@id/boxStatus"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#343434" />
</RelativeLayout>